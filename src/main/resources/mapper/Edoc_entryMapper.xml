<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.Edoc_entryMapper">
    <select id="getById" resultType="com.zb.pojo.Edoc_entry">
            select * from edoc_entry where id=#{id}
        </select>
    <select id="getAll" resultType="com.zb.pojo.Edoc_entry">
       select * from edoc_entry
       <where>
           <if test="categoryId!=null and categoryId!=-1">categoryId=#{categoryId}</if>
       </where>
         limit #{form},#{pageSize}
    </select>
    <select id="getCount" resultType="int">
        select count(*) from edoc_entry
        <where>
            <if test="categoryId!=null and categoryId!=-1">categoryId=#{categoryId}</if>
        </where>
    </select>
    <!--增-->
    <insert id="add" parameterType="com.zb.pojo.Edoc_entry">
           INSERT INTO edoc_entry (categoryId,title,summary,uploaduser,createdate)
           VALUES (#{categoryId},#{title},#{summary},#{uploaduser},NOW())
        </insert>
    <!--删-->
    <delete id="delete" parameterType="int">
            delete from edoc_entry where id=#{id}
        </delete>
    <update id="update" parameterType="com.zb.pojo.Edoc_entry">
            update edoc_entry set
            title=#{title},summary=#{summary},uploaduser=#{uploaduser},
            createdate=NOW() where id=#{id}
        </update>
</mapper>